<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="sale_view_order_form_inherit_sale_order">
            <field name="name">product_partner_sale_view_order_form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>  
            <field name="arch" type="xml"> 
                <field name="partner_id" position="after">
                    <field name="product_partner"/>
                </field>
            </field>
        </record>
        
        <record model="ir.ui.view" id="product_partner_inherit_account_view_move_form">
            <field name="name">product_partner_account_move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>  
            <field name="arch" type="xml"> 
                <field name="partner_id" position="after">
                    <field name="product_partner"/>
                </field>
            </field>
        </record>
        
    </data>
</odoo>