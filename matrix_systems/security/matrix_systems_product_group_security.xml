<odoo>
    <record id="group_matrix_systems_admin" model="res.groups">
        <field name="name">Matrix Systems / Admin</field>
    </record>
    <record id="only_active_modify" model="ir.rule">
        <field name="name">Only Active Product Group can be modified</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('active','=',True)]</field>
        <field name="model_id" ref="model_matrix_systems_product_group"/>
    </record>
</odoo>