<odoo>
    <data>
        <record model="ir.actions.act_window" id="product_group_list_action">
            <field name="name">Product Group</field>
            <field name="res_model">matrix_systems.product_group</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first product group
                </p>
            </field>
        </record>
        
        <menuitem name="Product Groups"
                  id="menu_product_groups"
                  sequence="1"/>
        
        <menuitem id="menu_product_groups_sub" 
                  name="Product Groups" 
                  parent="menu_product_groups" 
                  sequence="2"/>
        
        <menuitem id="menu_product_groups_test"
                  name="Groups"
                  parent="menu_product_groups_sub"
                  sequence="3"
                  action="product_group_list_action"/>
        
    </data>
</odoo>